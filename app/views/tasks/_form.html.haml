%div{:class => "col-lg-3"}
%div{:class => "col-lg-6"}
  %h1
    #{@task.story.name}
    %small
      Task
  = form_for([@task.story.project, @task.story, @task],  html: {remote:true }) do |f|
    .form-group
      = f.label :name
      %br
      = f.text_field :name, :class=> "form-control"
    .form-group
      = f.label :description
      %br
      = f.text_area :description, :class => 'form-control'

    = f.submit :value => "Save", :class => 'btn btn-success'
  %br
  .row
    #table
%div{:class => "col-lg-3"}